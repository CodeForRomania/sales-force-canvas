{
  "plugins": [
    "prettier",
    "react"
  ],
  "extends": [
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "decorators": true
    }
  },
  "globals": {
      "G": true,
      "afterAll": true,
      "afterEach": true,
      "beforeEach": true,
      "context": true,
      "describe": true,
      "expect": true,
      "fm": true,
      "it": true,
      "jest": true,
      "sinon": true,
      "newrelic": true,
      "__VERSION__": true,
  },
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "none",
      "bracketSpacing": true,
      "semi": false,
      "parser": "babylon",
      "printWidth": 100
    }],
    "strict": 1,
    "no-underscore-dangle": 0,
    "no-mixed-requires": 0,
    "no-process-exit": 0,
    "no-warning-comments": 0,
    "curly": 0,
    "no-multi-spaces": 0,
    "no-alert": 0,
    "no-debugger": 0,
    "no-empty": 2,
    "no-invalid-regexp": 1,
    "no-unused-expressions": 1,
    "no-native-reassign": 1,
    "no-fallthrough": 1,
    "handle-callback-err": 2,
    "camelcase": 0,
    "no-undef": 2,
    "no-dupe-keys": 2,
    "no-empty-character-class": 2,
    "no-self-compare": 2,
    "valid-typeof": 2,
    "no-unused-vars": 2,
    "no-shadow-restricted-names": 2,
    "no-new-require": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-console": 1,
    "new-cap": 0,
    "no-spaced-func": 2,
    "semi-spacing": 2,
    "space-before-function-paren": 0,
    "quotes": [1, "single", {"allowTemplateLiterals": true}],
    "key-spacing": [2],

    "object-curly-spacing": [2, "always"],
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "prefer-const": ["error", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": false
    }],
    "space-infix-ops": ["error", {"int32Hint": false}],
    "react/jsx-no-undef": 2,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/jsx-wrap-multilines": 0,
    "react/no-multi-comp": 0,
    "react/prop-types": 1
  }
}
